
@{
    ViewBag.Title = "DropTest";
}

<h2>DropTest</h2>

<link href="~/Content/draganddrop.css" rel="stylesheet" />

@using (Html.BeginForm("DropTest", "Dogs", null, FormMethod.Post, new { enctype = "multipart/form-data", @class = "dropbox"}))
{
    @Html.AntiForgeryToken()

    <div id="drop_zone" class="dropbox__input">
        <input type="file" name="upload" id="files" class="dropbox__file"  single />
        <label for="files" class="btn btn-warning"><strong>Choose a file</strong><span class="dropbox__dragndrop"> or drag it here</span>.</label>
        <button type="submit" class="btn btn-default">Upload</button>
        <div id="list">
            <span id="span"><img src="~/images/thumbnails/DogNoImage.png" class="dogThumbnail" /></span>
        </div>
    </div>
}

@section scripts {
<script src="~/Scripts/draganddrop.js"></script>
}