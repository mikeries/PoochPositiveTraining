<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Allura|Amatic+SC|Kaushan+Script|Open+Sans+Condensed|Oswald">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="description" content="" />
</head>
<body class="body">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pooch Positive Training", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Services", "Services", "Home")</li>
                    <li>@Html.ActionLink("Pricing", "Pricing", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container">
        <header>
            <div class="banner row">
                <div class="col-md-2 text-center">
                    <img src="~/images/Logo.png" alt="" class="logo" />
                </div>
                <div class="col-md-8 text-center vcenter">
                    <h2>Pooch Positive Training</h2>
                    <h3>Proof Positive that force-free works!</h3>
                </div>
                <div class="col-md-2">
                    <div class="facebooklogo text-center">
                        <a href="https://www.facebook.com/poochpositivetraining">
                            <div><img src="~/images/facebookIcon.png" alt="facebook link" /></div>
                            <div>Like us on Facebook!</div>
                        </a>
                    </div>
                    <div class="text-center">
                        Contact us: <br />
                        314-277-9075
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="container body-content">

        @RenderBody()
        <hr />

        <footer>
            <p>&copy; @DateTime.Now.Year - Pooch Positive Training</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    <script type='text/javascript'>
        $(function () {
            path = window.location.pathname;
            $(".nav").find(".active").removeClass("active");
            $(".nav a[href='" + path + "']").parent().addClass('active');
        });
    </script>
</body>
</html>
